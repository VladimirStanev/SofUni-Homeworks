        //{
            //this.Author = newAuthor;
        //}
        //public void Rename(string newTitle)
        //{
            //this.Title = newTitle;
        //}
        public override string ToString()
        {
            return ($"{Title} - {Content}: {Author}").ToString();
        }
    }
}
