using System;

namespace _05._Add_and_Subtract
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int integer = int.Parse(Console.ReadLine());
            int integer2 = int.Parse(Console.ReadLine());
            int integer3 = int.Parse(Console.ReadLine());

            int sum = SumOfTheFirstTwo(integer, integer2); 
            int substraction = SubstractionWithThirdNumber(sum, integer3);
            Console.WriteLine(substraction);
        }
        static int SumOfTheFirstTwo(int integer, int integer2)
        {
            int sumOfNumbers = integer + integer2;
            return sumOfNumbers;
        }
        static int SubstractionWithThirdNumber(int sum, int integer3)
        {
            int substraction = sum - integer3;
            return substraction;
        }
    }
}
