using System;
using System.Linq;
using System.Text;

namespace Problem_1___Secret_Chat
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string message = Console.ReadLine();
            
            string command = Console.ReadLine();
            while(command != "Reveal")
            {
                string[] commandInfo = command.Split(":|:", StringSplitOptions.RemoveEmptyEntries);
                string typeOfAction = commandInfo[0];

                if(typeOfAction == "InsertSpace")
                {
                    int indexToInsert = int.Parse(commandInfo[1]);
                    message = message.Insert(indexToInsert, " ");

                    Console.WriteLine(message);
                }
                else if(typeOfAction == "Reverse")
                {
                    string substring = commandInfo[1];
                    int startingIndex = message.IndexOf(substring);

                    if(startingIndex != -1)
                    {
                        message = message.Remove(startingIndex, substring.Length);
                        message += string.Join("", substring.Reverse());
                        Console.WriteLine(message);
                    }
                    else
                    {
                        Console.WriteLine("error");
                    }
                }
                else if(typeOfAction == "ChangeAll")
                {
                    string substring = commandInfo[1];
                    string replacement = commandInfo[2];

                    message = message.Replace(substring, replacement);
                    Console.WriteLine(message);
                }
                command = Console.ReadLine();
            }
            Console.WriteLine($"You have a new text message: {message}");
        }
    }
}
