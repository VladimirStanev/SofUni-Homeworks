using System;

namespace _08.PetShop
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double packageForDogs = 2.50;
            double packageForCats = 4;

            //Input
            int countOfPackagesForDogs = int.Parse(Console.ReadLine());
            int countOfPackagesForCats = int.Parse(Console.ReadLine());

            double finalSum = (packageForDogs * countOfPackagesForDogs) + (packageForCats * countOfPackagesForCats);

            Console.WriteLine($"{finalSum} lv.");
        }
    }
}
